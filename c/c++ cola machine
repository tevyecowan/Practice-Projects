cin >> x;

try {switch (x){
case 1:
    cout << "You've selected Cocka Cola! Good choice." << endl;
    break;
case 2:
    cout << "You've selected Grape Soda! Good choice." << endl;
    break;
case 3:
    cout << "You've selected Dr Schlepper! Good choice." << endl;
    break;
case 4:
    cout << "You've selected Foot Beer! Good choice." << endl;
    break;
case 5:
    cout << "You've selected Orange Soda! Good choice." << endl;
    break;
}
if ((x > 5) || (x <5)){
throw 99;}
if (!cin >> x) {
    throw 88;}
}

catch (int y) {cout << "Invalid selection - error " << y;}}


















